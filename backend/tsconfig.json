{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions":true,
  },
  "exclude": ["node_modules"]
}
